---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tranzitus">
  <main
    class="min-h-screen h-full col-span-8 flex flex-col gap-12 justify-center md:grid-cols-8 pb-12 px-4 first-mesh"
  >
    <div class="flex flex-col gap-4 text-center">
      <h1 class="text-3xl font-bold">Precios de Envío</h1>
      <h2 class="text-xl font-normal">Envíos en toda CABA $3784.99</h2>
    </div>
    <div class="flex flex-col gap-4 text-center">
      <h2 class="text-3xl font-bold">Envíos en GBA</h2>
      <p class="text-xl font-normal leading-8 text-balance">
        Hasta 20 km: $3784.99 Más de 20 km: $3784.99 + $225.09 por cada km
        adicional
      </p>
    </div>
  </main>
</Layout>
