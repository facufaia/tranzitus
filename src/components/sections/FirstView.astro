---
import ArrowDown from "../../assets/icons/ArrowDown.astro";
import LogoOp from "../../assets/LogoOp.astro";
import Logo from "../../assets/Logo.astro";
---

<!-- class="flex flex-col justify-center h-full md:grid md:grid-cols-12 md:grid-rows-1" -->
<section
  id="inicio"
  class="relative first-mesh col-span-8 text-[4rem] font-bold min-h-screen text-center flex flex-col justify-between pb-8 gap-14 md:grid md:grid-cols-12 md:gap-8"
>
  <div
    class="flex flex-col items-center justify-center gap-8 w-full h-full md:col-start-2 md:col-end-7 md:w-auto md:gap-16 md:items-start"
  >
    <div class="flex flex-col justify-end gap-24 md:gap-12 md:items-start">
      <p class="flex flex-col h-fit gap-2 items-center">
        <span
          class="fromL text-5xl sm:fromLL sm:opacity-0 sm:text-6xl md:text-5xl md:font-medium italic"
          >Lo pensaste,</span
        >
        <span
          class="fromR text-5xl sm:fromRR sm:opacity-0 sm:text-6xl md:text-5xl md:font-medium italic translate-x-[400%]"
          >te llegó</span
        >
      </p>
      <div>
        <h2
          class="text-lg text-center sm:text-2xl md:text-left font-light text-neutral-300 fadein"
        >
          Solución logística integral
        </h2>
        <h3
          class="text-lg text-center sm:text-2xl md:text-left text-neutral-300 font-light fadein"
        >
          Obtene una solucion a medida ahora
        </h3>
      </div>
    </div>
    <a
      href="#contacto"
      class="bg-secondary-600 text-neutral-950 h-auto py-2 px-12 text-xl sm:text-2xl md:text-xl rounded-lg w-fit transition-colors duration-300 ease-in-out hover:bg-secondary-700 tracking-wide fadein2"
    >
      Cotizar
    </a>
  </div>
  <div class="absolute w-full h-full hidden">
    <LogoOp />
  </div>
  <div
    class="hidden md:col-start-7 md:w-[6em] md:col-end-12 md:flex transition-colors duration-300 ease-in-out fadein2"
  >
    <Logo />
  </div>
  <div class="absolute text-center bottom-0 margin-0 w-full pb-10 fadein">
    <div class="inline-block animate-bounce"><ArrowDown /></div>
  </div>
</section>

<style>
  .fadein {
    opacity: 0;
    animation: fadeIn 1s ease-in-out 1.5s forwards;
  }

  .fadein2 {
    opacity: 0;
    animation: fadeIn 1s ease-in-out 1.8s forwards;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .fromL {
    animation: fromL 1s ease-in-out forwards;
  }
  .fromLL {
    animation: fromLL 1s ease-in-out 0.4s forwards;
  }
  .fromR {
    animation: fromR 1.4s ease-in-out 0.4s forwards;
  }
  .fromRR {
    animation: fromRR 1.4s ease-in-out 0.4s forwards;
  }

  @keyframes fromL {
    0% {
      transform: translateX(-150%);
      opacity: 0%;
    }
    100% {
      transform: translateX(0);
      opacity: 100%;
    }
  }

  @keyframes fromR {
    0% {
      transform: translateX(450%);
      opacity: 0%;
    }
    100% {
      transform: translateX(-32%);
      opacity: 100%;
    }
  }
</style>
